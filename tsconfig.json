{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@republicservices/styles": [
        "libs/styles/src/index.ts"
      ],
      "@republicservices/component/header": [
        "libs/component/header/src/index.ts"
      ],
      "@republicservices/component/confirm-input": [
        "libs/component/confirm-input/src/index.ts"
      ]
    },
    "module": "es2015"
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
